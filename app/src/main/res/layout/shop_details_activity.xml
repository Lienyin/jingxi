<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/iv_details_shop_mendian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/zhan_weitu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_details_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="XXX"/>
                    <TextView
                        android:id="@+id/tv_details_shop_yy"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@color/public_all"
                        android:textColor="@color/white"
                        android:text="营业中"/>
                    <TextView
                        android:id="@+id/tv_details_shop_jm"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@color/home_yellow_m"
                        android:textColor="@color/white"
                        android:text="直营店"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black999"
                        android:text="总评分"/>

                    <TextView
                        android:id="@+id/tv_details_shop_pf"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/home_yellow_m"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black999"
                        android:text="总订单"/>
                    <TextView
                        android:id="@+id/tv_details_shop_dd"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/home_yellow_m"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black999"
                        android:text="技师数"/>
                    <TextView
                        android:id="@+id/tv_details_shop_js"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/home_yellow_m"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_details_shop_address"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black999"
                        android:text="XXX"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/call_jishi" />
                    <TextView
                        android:id="@+id/tv_details_shop_call"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/black999"
                        android:text="联系门店"/>
                    <TextView
                        android:id="@+id/tv_details_shop_call_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black999"
                        android:text="XXX-XXXX-XXXX"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/set_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="门店技师"/>
                <com.jxxc.jingxi.utils.MyGridView
                    android:id="@+id/gv_technician_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:numColumns="3"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/set_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="选择预约时间段"/>
                <com.jxxc.jingxi.utils.MyGridView
                    android:id="@+id/gv_time_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:numColumns="3"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
