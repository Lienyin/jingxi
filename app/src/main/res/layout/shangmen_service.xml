<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="10dp"
                android:background="@drawable/attestation_bg_edittext"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_wai_guan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="外观清洗(0元)"
                            android:textColor="@drawable/radio_main"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rb_zheng_che"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:text="整车清洗"
                            android:textColor="@drawable/radio_main"
                            android:textSize="14sp" />
                    </RadioGroup>
                </LinearLayout>

                <!--上门洗车-->
                <LinearLayout
                    android:id="@+id/ll_car_fuwu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_car_fuwu1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawableTop="@drawable/tab_home_car7"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="外观清洗"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawableTop="@drawable/tab_home_car1"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="内饰清洗"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car8"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="塑料件护理"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car3"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="漆面封体"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_car_fuwu5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car6"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="轮毂清洗"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car2"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="蜡品护理"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car5"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="发动机舱护理"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car4"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="内饰SPA"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_fuwu_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:gravity="center"
                        android:background="@color/public_all"
                        android:text="敬请\n期待"/>
                </LinearLayout>
            </LinearLayout>
            <!--车辆信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                android:background="@drawable/attestation_bg_edittext"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆信息"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <!--添加车辆UI-->
                <LinearLayout
                    android:id="@+id/ll_add_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 没车辆信息，点击添加"
                        android:textColor="@color/public_all"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--车辆信息-->
                <LinearLayout
                    android:id="@+id/ll_car_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车牌号码"
                            android:textColor="@color/black555"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_car_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="XXXXXX"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_huan_car"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:background="@drawable/shape_bg_button"
                            android:gravity="center"
                            android:text="换辆车"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/set_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车型选择"
                            android:textColor="@color/black555"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_car_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="XXXXXX"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车身颜色"
                            android:textColor="@color/black555"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_car_color"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/car_color_8"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--            联系信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="@drawable/attestation_bg_edittext"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系信息"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="为了更好地为您服务请完整填写信息"
                        android:textColor="@color/black555"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="停车地点"
                        android:textColor="@color/black555"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/et_car_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="请选择停车地点"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_56" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textColor="@color/black555"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@color/transparent"
                        android:hint="请输入联系方式"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="帮TA叫车"
                        android:visibility="gone"
                        android:textColor="@color/black555"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/iv_call_phone"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone"
                        android:src="@drawable/call_phone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务时间"
                        android:textColor="@color/black555"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_appointment_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:hint="请选择服务时间"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_time_date"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_55" />
                </LinearLayout>
            </LinearLayout>
            <!--附加信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/attestation_bg_edittext"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附加信息"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="细节描述"
                        android:textColor="@color/black555"
                        android:textSize="10sp" />
                </LinearLayout>
                <EditText
                    android:id="@+id/et_car_memo"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:padding="5dp"
                    android:background="@drawable/shape_bg_edittext"/>
            </LinearLayout>
            <!--优惠券-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/attestation_bg_edittext"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <com.jxxc.jingxi.utils.ListViewForScrollView
                android:id="@+id/lv_coupon_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order_money"
                android:textSize="16sp"
                android:text="订单金额：0.00元"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order_money"
                android:textSize="10sp"
                android:text="已优惠：0.00元"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_create_order"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:background="@color/public_all"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:text="立即下单"/>
    </LinearLayout>
</LinearLayout>
