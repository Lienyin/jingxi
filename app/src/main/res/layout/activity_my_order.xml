<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF9FC"
    android:orientation="vertical">

    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_order_all"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="全部"
                android:drawableBottom="@drawable/radio_bg"
                android:textColor="@drawable/radio"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/rb_order_daizhifu"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="待支付"
                android:drawableBottom="@drawable/radio_bg"
                android:textColor="@drawable/radio"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/rb_order_daijiedan"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="待接单"
                android:drawableBottom="@drawable/radio_bg"
                android:textColor="@drawable/radio"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/rb_order_daifuwu"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="待服务"
                android:drawableBottom="@drawable/radio_bg"
                android:textColor="@drawable/radio"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/rb_order_jignxz"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="服务中"
                android:drawableBottom="@drawable/radio_bg"
                android:textColor="@drawable/radio"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/rb_order_yiwc"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="已完成"
                android:drawableBottom="@drawable/radio_bg"
                android:textColor="@drawable/radio"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/rb_order_cancel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="已取消"
                android:drawableBottom="@drawable/radio_bg"
                android:textColor="@drawable/radio"
                android:textSize="14sp" />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/set_bg"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
