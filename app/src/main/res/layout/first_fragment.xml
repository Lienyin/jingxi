<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/logo_108" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="菁喜"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="14dp"
                    android:src="@mipmap/dingwei_back" />

                <TextView
                    android:id="@+id/tv_location_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="苏州"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:background="@drawable/shape_round_yellow"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="XXX"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_round_rect_yellow"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/home_guang_gao"/>
            </LinearLayout>

<!--            服务-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/attestation_bg_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_102" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="服务至上"
                        android:textColor="@color/black999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_104" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="极致工艺"
                        android:textColor="@color/black999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_106" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="随叫随到"
                        android:textColor="@color/black999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_108" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="至诚关怀"
                        android:textColor="@color/black999"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
<!--            洗车-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/attestation_bg_edittext">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_work_order_all"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:checked="true"
                            android:text="菁喜上门洗车"
                            android:textColor="@drawable/radio"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rb_work_order_dai_jie"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:text="菁喜到店洗车"
                            android:textColor="@drawable/radio"
                            android:textSize="14sp" />
                    </RadioGroup>
                </LinearLayout>
                <!--上门洗车-->
                <LinearLayout
                    android:id="@+id/ll_shang_men"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_car_fuwu1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawableTop="@drawable/tab_home_car7"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="外观清洗"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawableTop="@drawable/tab_home_car1"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="内饰清洗"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car8"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="塑料件护理"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car3"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="漆面封体"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_car_fuwu5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car6"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="轮毂清洗"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car2"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="蜡品护理"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car5"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="发动机舱护理"/>
                        <TextView
                            android:id="@+id/tv_car_fuwu8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tab_menu_bg"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/tab_home_car4"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@drawable/tab_menu_deal_text"
                            android:text="内饰SPA"/>
                    </LinearLayout>
                </LinearLayout>
                <!--到店洗车-->
                <LinearLayout
                    android:id="@+id/ll_dao_dian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center">
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="65dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@color/public_all"
                        android:textColor="@color/white"
                        android:text="敬 请\n期 待"/>
                </LinearLayout>
            </LinearLayout>
<!--            创富梦想，即刻出发-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/icon_115"
                android:gravity="center_vertical">

            </LinearLayout>
            <TextView
                android:id="@+id/tv_map_jingsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="@color/black999"
                android:text="查看周边的菁喜技师 >"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
